<% content_for :title do %>
    Administrators
<% end %>
<% content_for :head do %>
    <%= stylesheet_link_tag "/stylesheets/Controls/Table.css" %>
    <%= stylesheet_link_tag "/stylesheets/Pages/Knack.Administrators.css" %>
    <%= javascript_include_tag "/javascripts/pages/Admin/knack.partner.administrator.js" %>

<%end%>
<% content_for :pagename do %>
    <div>Administrators</div>
<% end %>

<% content_for :registry do %>
    <div class="bl-block">
      <div class="blue-line">
        <div class="section-header">
        </div>
      </div>
    </div>
<% end %>

<% content_for :background do %>
    <div class="bl-block">
      <div class="blue-line">
        <input type="hidden" value="fghj"/>
      </div>
    </div>
<% end %>

<div class="withBackground">
  <div class="content">
    <div class="mainBlock">
      <div class="table-container">
        <%=  show_flash %>
        <table id="product-table" >
          <thead>
          <tr>
            <th class="id-column">Id</th>
            <% if @is_admin %>
                <th class="name-column">Partner</th>
            <% end  %>
            <th class="">First Name</th>
            <th class="">Last Name</th>
            <th class="">Email</th>
            <th class="">Phone</th>
            <th></th>
            <th></th>
          </tr>
          </thead>
          <tbody>
          <% @administrators.each do |admin| %>
              <tr>
                <td><%=  admin.id%></td>
                <% if @is_admin %>
                    <td><%=  admin.partner.BillingName + ' ' + admin.partner.BillingLastName %></td>
                <% end  %>
                <td><%=  admin.first_name %></td>
                <td><%=  admin.last_name %></td>
                <td><%=  admin.email %></td>
                <td><%=  admin.phone %></td>
                <td><%=  link_to 'Edit', edit_admin_partner_administrator_path(admin), :class => "edit"%></td>
                <td><%=  link_to 'Delete', delete_admin_partner_administrator_path(admin), :class => "delete", :confirm => 'Are you sure?', :method => :delete %></td>
              </tr>
          <%end%>
          </tbody>
        </table>
      </div>
    </div>
    <div class="div-button">
      <%= button_to(" ", new_admin_partner_administrator_path, :method => 'get', :class => 'btn-add') %>
    </div>
  </div>
</div>